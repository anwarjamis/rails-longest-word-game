<h1>Scramble</h1>
<ul class="list-inline">
  <% @letters.each do |letter| %>
    <li class="list-inline-item text-center align-middle"><h1><%= letter %></h1></li>
  <% end %>
</ul>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <label for="attempt">What is the longest word you can find with those letters?</label><br>
  <input type="text" name="attempt" id="attempt">
  <input type="submit">
</form>
